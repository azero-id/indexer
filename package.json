{
  "name": "@azns/indexer",
  "author": "AZERO.ID <hello@azero.id> (https://azero.id)",
  "homepage": "https://azero.id",
  "private": true,
  "engines": {
    "node": "20"
  },
  "packageManager": "npm@10.8.2",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "codegen:model": "squid-typeorm-codegen",
    "codegen:metadata": "./typegen-all.sh",
    "codegen": "npm run codegen:model && npm run codegen:metadata",
    "migration:generate": "npm run build && squid-typeorm-migration generate",
    "migration:apply": "squid-typeorm-migration apply",
    "start:archive": "docker compose -f docker-compose.archive.yml up",
    "start:squid": "docker compose -f docker-compose.squid.yml up",
    "start:processor": "npm run build && npm run migration:apply && node -r dotenv/config lib/processor",
    "stop:archive": "docker compose -f docker-compose.archive.yml down",
    "stop:squid": "docker compose -f docker-compose.squid.yml down",
    "serve": "squid-graphql-server",
    "deploy": "sqd deploy . -o azero-id -m",
    "lint": "prettier . --check && eslint",
    "lint:fix": "prettier . --write && eslint --fix",
    "update": "npm-check-updates --interactive --root --format group --install always",
    "typecheck": "tsc --pretty --noEmit",
    "typesync": "typesync && npm install"
  },
  "dependencies": {
    "@polkadot/util": "^13.0.2",
    "@subsquid/archive-registry": "^3.3.0",
    "@subsquid/graphql-server": "4.6.0",
    "@subsquid/ink-abi": "^3.1.0",
    "@subsquid/ss58": "^2.0.2",
    "@subsquid/substrate-processor": "^8.4.1",
    "@subsquid/typeorm-migration": "1.3.0",
    "@subsquid/typeorm-store": "^1.5.1",
    "axios": "^1.7.2",
    "axios-retry": "^4.4.2",
    "dayjs": "^1.11.12",
    "dotenv": "^16.4.5",
    "pg": "^8.12.0",
    "pino": "^9.3.1",
    "pino-pretty": "^11.2.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@subsquid/ink-typegen": "^3.1.0",
    "@subsquid/substrate-metadata-explorer": "^3.1.2",
    "@subsquid/typeorm-codegen": "^2.0.1",
    "@types/eslint": "~9.6.0",
    "@types/eslint-config-prettier": "~6.11.3",
    "@types/node": "^20.14.12",
    "@types/pg": "~8.11.6",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "type-graphql": "1.2.0-rc.1",
    "typescript": "^5.5.4",
    "typesync": "^0.13.0"
  }
}
